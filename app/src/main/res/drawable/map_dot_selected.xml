<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/aircasting_blue_400" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/aircasting_white" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/aircasting_blue_400" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

</layer-list>