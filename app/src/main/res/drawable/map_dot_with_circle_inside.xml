<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:tint="@color/aircasting_blue_400">

            <size
                android:width="100dp"
                android:height="100dp" />
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />

            <stroke
                android:width="5dp"
                android:color="@color/aircasting_white" />
        </shape>
    </item>

</layer-list>