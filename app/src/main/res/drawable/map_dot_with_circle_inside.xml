<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/aircasting_blue_400" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="5dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/aircasting_blue_400" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="7dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/aircasting_white" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <stroke
                android:width="5dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/aircasting_blue_400" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>

</layer-list>