<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        style="@style/TextAppearance.Aircasting.Dialog.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_8"
        android:layout_marginTop="@dimen/keyline_8"
        android:layout_marginEnd="@dimen/keyline_8"
        android:text="@string/dialog_header_txt"
        android:textSize="@dimen/text_size_m"
        app:lineHeight="@dimen/keyline_6" />

    <TextView
        android:id="@+id/description_txt"
        style="@style/TextAppearance.Aircasting.Dialog.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_8"
        android:layout_marginTop="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_8"
        android:text="@string/dialog_helper_des"
        android:textSize="@dimen/text_size_m"
        app:lineHeight="@dimen/keyline_6" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_8"
        android:layout_marginTop="@dimen/keyline_7"
        android:layout_marginEnd="@dimen/keyline_8"
        android:text="@string/ok" />

    <Button
        android:id="@+id/dont_allow_btn"
        style="@style/Widget.Aircasting.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_8"
        android:layout_marginEnd="@dimen/keyline_8"
        android:layout_marginBottom="@dimen/keyline_6"
        android:fontFamily="@font/moderat_trial_bold"
        android:text="@string/dont_allow_dialog_txt"
        android:textSize="@dimen/button_text_size" />

</androidx.appcompat.widget.LinearLayoutCompat>
