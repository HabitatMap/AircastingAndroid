<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dashboard_mobile_active_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_empty_mobile_active_header"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline2"
        app:layout_constraintBottom_toTopOf="@id/dashboard_mobile_active_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboard_mobile_active_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_6"
        android:lineHeight="30dp"
        android:text="@string/dashboard_empty_mobile_active_text"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toTopOf="@id/dashboard_mobile_record_new_session_button"
        app:layout_constraintTop_toBottomOf="@id/dashboard_mobile_active_header" />

    <Button
        android:id="@+id/dashboard_mobile_record_new_session_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_8"
        android:text="@string/record_mobile_session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_mobile_active_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
