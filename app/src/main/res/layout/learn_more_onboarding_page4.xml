<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_background">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Aircasting.BottomSheetCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/keyline_8">

                <ImageView
                    android:id="@+id/close_button"
                    android:src="@drawable/ic_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/aircasting_blue_400"
                    android:paddingStart="@dimen/keyline_4"
                    android:paddingBottom="@dimen/keyline_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/learn_more_onboarding_page4_header"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/learn_more_onboarding_page4_header"
                    style="@style/TextAppearance.Aircasting.NewSessionDetails.Headline1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_bottomsheet_page4_header"
                    android:textAppearance="@style/TextAppearance.Aircasting.Headline2"
                    android:textColor="@color/aircasting_blue_400"
                    android:textSize="@dimen/text_size_xxl"
                    app:lineHeight="@dimen/line_height_xxl"
                    android:layout_marginTop="@dimen/keyline_8"
                    android:layout_marginStart="@dimen/keyline_6"
                    android:layout_marginEnd="@dimen/keyline_6"
                    android:layout_marginBottom="@dimen/keyline_6"
                    app:layout_constraintTop_toBottomOf="@+id/close_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/learn_more_onboarding_page4_description_part1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_bottomsheet_page4_description1"
                    android:textAppearance="@style/TextAppearance.Aircasting.Body1"
                    android:textColor="@color/aircasting_grey_700"
                    android:textSize="@dimen/text_size_m"
                    android:layout_marginTop="@dimen/keyline_6"
                    android:layout_marginStart="@dimen/keyline_6"
                    android:layout_marginEnd="@dimen/keyline_6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/learn_more_onboarding_page4_header"
                    app:layout_constraintBottom_toTopOf="@id/learn_more_onboarding_page4_description_part2" />

                <TextView
                    android:id="@+id/learn_more_onboarding_page4_description_part2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_bottomsheet_page4_description2"
                    android:textAppearance="@style/TextAppearance.Aircasting.Body1"
                    android:textColor="@color/aircasting_grey_700"
                    android:textSize="@dimen/text_size_m"
                    android:layout_marginTop="@dimen/keyline_6"
                    android:layout_marginStart="@dimen/keyline_6"
                    android:layout_marginEnd="@dimen/keyline_6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/learn_more_onboarding_page4_description_part1"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
