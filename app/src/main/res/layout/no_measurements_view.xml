<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/session_no_measurements_icon"
        android:layout_width="@dimen/keyline_10"
        android:layout_height="@dimen/keyline_10"
        android:src="@drawable/ic_airbeam"
        android:layout_marginTop="@dimen/keyline_3"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/session_tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/session_no_measurements_labels" />

    <LinearLayout
        android:id="@+id/session_no_measurements_labels"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_3"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/session_no_measurements_icon"
        app:layout_constraintBottom_toBottomOf="@+id/session_no_measurements_icon"
        app:layout_constraintStart_toEndOf="@id/session_no_measurements_icon"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/session_no_measurements_label1"
            android:text="@string/session_no_measurements_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/aircasting_dark_blue" />

        <TextView
            android:id="@+id/session_no_measurements_label2"
            android:text="@string/session_no_measurements_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="12sp"
            android:textColor="@color/aircasting_dark_blue"/>
    </LinearLayout>

</merge>
