<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextAppearance.Aircasting.Headline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_search_fixed_sessions"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTop"
        app:layout_constraintEnd_toEndOf="@+id/searchInputField"
        app:layout_constraintStart_toStartOf="@+id/searchInputField"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <include
        android:id="@+id/include"
        layout="@layout/prominent_app_bar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="154dp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchInputField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/keyline_7"
        android:layout_marginEnd="@dimen/keyline_9"
        android:background="@drawable/search_input_field_background"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop"
        app:queryBackground="@null"
        app:queryHint="@string/search_session_query_hint"
        app:searchIcon="@null" />

    <TextView
        android:id="@+id/search_parameter_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/search_session_parameters_header"
        android:textAppearance="@style/TextAppearance.Aircasting.Body1"
        app:layout_constraintEnd_toEndOf="@+id/searchInputField"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/searchInputField"
        app:layout_constraintTop_toBottomOf="@+id/searchInputField" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/keyline_4"
        app:layout_constraintEnd_toEndOf="@+id/search_parameter_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search_parameter_header"
        app:layout_constraintTop_toBottomOf="@+id/search_parameter_header">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">


            <com.google.android.material.chip.Chip
                android:id="@+id/particulate_matter_chip"
                style="@style/Widget.Aircasting.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/particulate_matter"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/temperature_chip"
                style="@style/Widget.Aircasting.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/humidity_chip"
                style="@style/Widget.Aircasting.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                app:layout_constraintEnd_toStartOf="@id/ozone_chip" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ozone_chip"
                style="@style/Widget.Aircasting.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/ozone"
                app:layout_constraintEnd_toEndOf="parent" />
        </com.google.android.material.chip.ChipGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>