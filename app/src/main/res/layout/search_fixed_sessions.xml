<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchInputField"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_marginStart="@dimen/keyline_7"
        android:layout_marginEnd="@dimen/keyline_9"
        android:background="@drawable/search_input_field_background"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop"

        app:queryBackground="@null"
        app:queryHint="@string/search_session_query_hint"

        app:searchIcon="@null" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="629dp" />

    <TextView
        android:id="@+id/search_parameter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_8"
        android:layout_marginTop="@dimen/header_1_vertical_margin"
        android:layout_marginEnd="@dimen/keyline_8"
        android:text="@string/search_session_parameters_header"
        android:textAppearance="@style/TextAppearance.Aircasting.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineMiddle" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/keyline_4"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
        app:layout_constraintEnd_toEndOf="@+id/search_parameter_header"
        app:layout_constraintStart_toStartOf="@+id/search_parameter_header"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/particulate_matter_radio_button"
                    style="@style/Widget.Aircasting.ExpandedCardButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="0dp"
                    android:text="@string/particulate_matter"
                    app:layout_constraintEnd_toEndOf="parent" />

                <RadioButton
                    android:id="@+id/temperature_radio_button"
                    style="@style/Widget.Aircasting.ExpandedCardButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="0dp"
                    android:text="@string/temperature"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/humidity_radio_button"
                    style="@style/Widget.Aircasting.ExpandedCardButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/keyline_2"
                    android:minHeight="0dp"
                    android:text="@string/humidity"
                    app:layout_constraintEnd_toStartOf="@id/graph_button" />

                <RadioButton
                    android:id="@+id/graph_button"
                    style="@style/Widget.Aircasting.ExpandedCardButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="0dp"
                    android:text="@string/ozone"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="366dp" />

</androidx.constraintlayout.widget.ConstraintLayout>