<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="pl.llp.aircasting.ui.viewmodel.SearchFollowViewModel" />
    </data>

    <merge>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/measurement_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.selectedSession.streams.sensor.measurementShortType}"
                android:textAlignment="center"
                android:textColor="@color/aircasting_grey_700"
                android:textSize="@dimen/text_size_xs" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/circle_indicator"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="@dimen/keyline_4"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_circle"
                    setTint="@{0}"
                    />

                <TextView
                    android:id="@+id/measurement_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:padding="@dimen/keyline_1"
                    android:paddingStart="3dp"
                    android:text="@{13}"
                    android:textColor="@color/aircasting_grey_700"
                    android:textSize="@dimen/text_size_xs" />

            </LinearLayout>
        </LinearLayout>
    </merge>
</layout>