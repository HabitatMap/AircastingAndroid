<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Aircasting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/aircasting_blue_400</item>
        <item name="colorPrimaryDark">@color/aircasting_dark_blue</item>
        <item name="colorSecondary">@color/aircasting_dark_blue</item>
        <item name="colorAccent">@color/aircasting_pink</item>
        <item name="colorOnPrimary">@color/colorBackground</item>
        <item name="colorSurface">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Aircasting.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Aircasting.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Aircasting.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Aircasting.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Aircasting.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Aircasting.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Aircasting.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Aircasting.Body2</item>
        <item name="materialButtonStyle">@style/Widget.Aircasting.Button</item>
        <item name="toolbarStyle">@style/Widget.Aircasting.AppBar</item>
        <item name="bottomSheetDialogTheme">@style/Widget.Aircasting.BottomSheet</item>
        <item name="switchStyle">@style/Widget.Aircasting.Switch</item>
    </style>

    <style name="Widget.Aircasting.ExpandedCardButtons" parent="@style/Widget.Aircasting.TextButton">
        <item name="android:backgroundTint">@color/colorBackground</item>
        <item name="android:textColor">@color/aircasting_blue_400</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/muli_semi_bold</item>
        <item name="android:fontFamily">@font/muli_semi_bold</item>
        <item name="shapeAppearance">@style/Widget.Aircasting.RoundedButtonShapeAppearance</item>
    </style>

    <style name="Widget.Aircasting.SettingsButtons" parent="@style/Widget.Aircasting.TextButton">
        <item name="android:backgroundTint">@color/colorBackground</item>
        <item name="android:textColor">@color/aircasting_grey_700</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@dimen/keyline_8</item>
        <item name="android:paddingEnd">@dimen/keyline_8</item>
        <item name="android:paddingTop">@dimen/keyline_2</item>
        <item name="android:paddingBottom">@dimen/keyline_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>
</resources>