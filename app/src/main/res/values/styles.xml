        <item name="textAppearanceBody1">@style/TextAppearance.Aircasting.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Aircasting.Body2</item>
        <item name="materialButtonStyle">@style/Widget.Aircasting.Button</item>
