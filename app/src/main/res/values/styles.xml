        <item name="colorPrimaryDark">@color/aircasting_dark_blue</item>
        <item name="colorSecondary">@color/aircasting_dark_blue</item>
        <item name="colorAccent">@color/aircasting_pink</item>
        <item name="colorOnPrimary">@color/aircasting_white</item>
        <item name="colorSurface">@color/aircasting_white</item>
        <item name="android:colorBackground">@color/aircasting_white</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Aircasting.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Aircasting.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Aircasting.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Aircasting.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Aircasting.Headline5</item>
