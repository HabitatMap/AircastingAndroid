    <style name="TextAppearance.Aircasting.Headline2" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/header2_text_size</item>
    </style>

    <style name="TextAppearance.Aircasting.Headline3" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/header3_text_size</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Aircasting.Headline4" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">@color/aircasting_grey_400</item>
        <item name="android:textSize">@dimen/header4_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Aircasting.Headline5" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/aircasting_grey_600</item>
        <item name="android:textSize">@dimen/header5_text_size</item>
    </style>

    <style name="TextAppearance.Aircasting.Headline6" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">@color/aircasting_grey_400</item>
        <item name="android:textSize">@dimen/header6_text_size</item>
    </style>


    <style name="TextAppearance.Aircasting.AppBar" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_bold</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>


    <style name="TextAppearance.Aircasting.Body1" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColor">@color/aircasting_grey_500</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
    </style>

    <style name="TextAppearance.Aircasting.Body2" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">@color/aircasting_grey_400</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextAppearance.Aircasting.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="TextAppearance.Aircasting.TextButton" parent="">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_button_text_size</item>
    </style>

    <style name="TextAppearance.Aircasting.Login.TextButton" parent="">
        <item name="android:fontFamily">@font/moderat_trial_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="TextAppearance.Aircasting.ToggleButton" parent="TextAppearance.Aircasting.TextButton">
        <item name="android:fontFamily">@font/moderat_trial_bold</item>
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>

    <!-- New session typography -->

    <!-- Cards -->
    <style name="TextAppearance.Aircasting.Cards.Headline1" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/cards_headline1_text_size</item>
    </style>
    <style name="TextAppearance.Aircasting.Cards.Body1" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColor">@color/aircasting_grey_500</item>
        <item name="android:textSize">@dimen/cards_body1_text_size</item>
    </style>

    <!-- Steps -->
    <style name="TextAppearance.Aircasting.NewSessionSteps.Headline1" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="lineHeight">42dp</item>
    </style>

    <style name="TextAppearance.Aircasting.NewSessionSteps.Body1" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">@color/aircasting_grey_700</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="TextAppearance.Aircasting.NewSessionDetails.Headline1" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="lineHeight">42dp</item>
    </style>

    <style name="TextAppearance.Aircasting.NewSessionDetails.Headline2" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="TextAppearance.Aircasting.NewSessionDetails.Headline3" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_bold</item>
        <item name="android:textColor">@color/aircasting_grey_700</item>
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>

    <style name="TextAppearance.Aircasting.TextInput.Hint" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">@color/aircasting_grey_500</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="TextAppearance.Aircasting.TextInput.Text" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/moderat_trial_regular</item>
        <item name="android:textColor">@color/aircasting_grey_700</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="TextAppearance.Aircasting.NewSessionDetails.Network" parent="@style/TextAppearance.Aircasting.Body2">
        <item name="android:textColor">@color/aircasting_grey_500</item>
    </style>

    <style name="TextAppearance.Aircasting.Dialog.Header" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textAlignment">center</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="TextAppearance.Aircasting.Dialog.Description" parent="@style/TextAppearance.Aircasting.Body1">
        <item name="android:textAlignment">center</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="TextAppearance.Aircasting.MapStatisticsLabel" parent="@style/TextAppearance.Aircasting.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColor">@color/aircasting_grey_600</item>
        <item name="android:textSize">@dimen/text_size_xxs</item>
    </style>

    <style name="TextAppearance.Aircasting.MapStatisticsValue" parent="@style/TextAppearance.Aircasting.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/moderat_trial_medium</item>
        <item name="android:textColor">@color/aircasting_grey_600</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
    </style>

    <!-- Styles -->

    <!-- Buttons -->

    <style name="Widget.Aircasting.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:textAppearance">@style/TextAppearance.Aircasting.Button</item>
        <item name="shapeAppearance">@style/Widget.Aircasting.ButtonShapeAppearance</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationY">@dimen/button_shadow_y_translation</item>
        <item name="android:translationZ">@dimen/button_shadow_translation</item>
    </style>

    <style name="Widget.Aircasting.ButtonShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Widget.Aircasting.RoundedButtonShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Widget.Aircasting.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Aircasting.TextButton</item>
        <item name="android:translationX">0dp</item>
        <item name="android:translationY">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <style name="Widget.Aircasting.ToggleButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Aircasting.ToggleButton</item>
        <item name="android:translationX">0dp</item>
        <item name="android:translationY">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:padding">@dimen/keyline_3</item>
        <item name="borderWidth">1dp</item>
        <item name="android:textColor">@color/aircasting_grey_500</item>
        <item name="borderColor">@color/aircasting_grey_100</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Aircasting.ToggleButton</item>
    </style>

    <style name="ThemeOverlay.Aircasting.ToggleButton" parent="">
        <item name="colorPrimary">@color/aircasting_grey_700</item>
    </style>

    <style name="Widget.Aircasting.IconButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/aircasting_dark_blue</item>
        <item name="iconPadding">@dimen/keyline_6</item>
        <item name="android:backgroundTint">@color/aircasting_white</item>
        <item name="android:textColor">@color/aircasting_dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/keyline_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/moderat_trial_medium</item>
        <item name="android:fontFamily">@font/moderat_trial_medium</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="Widget.Aircasting.BottomSheetTextButton" parent="@style/Widget.Aircasting.TextButton">
        <item name="android:backgroundTint">@color/aircasting_white</item>
        <item name="android:textColor">@color/aircasting_dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/keyline_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/moderat_trial_medium</item>
        <item name="android:fontFamily">@font/moderat_trial_medium</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="Widget.Aircasting.ExpandedCardButtons" parent="@style/Widget.Aircasting.TextButton">
        <item name="android:backgroundTint">@color/aircasting_grey_50</item>
        <item name="android:textColor">@color/aircasting_blue_400</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/keyline_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/muli_semi_bold</item>
        <item name="android:fontFamily">@font/muli_semi_bold</item>
        <item name="shapeAppearance">@style/Widget.Aircasting.RoundedButtonShapeAppearance</item>
    </style>

    <!-- Cards -->

    <style name="Widget.Aircasting.Cards" parent="@style/Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Aircasting.Cards</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="ThemeOverlay.Aircasting.Cards" parent="">
        <item name="colorPrimary">@color/aircasting_blue_400</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Aircasting.Cards.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Aircasting.Cards.Body1</item>
    </style>

    <!-- BottomSheet Cards -->

    <style name="Widget.Aircasting.BottomSheetCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/aircasting_white</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <!-- App Bar -->

    <style name="Widget.Aircasting.AppBarLayout" parent="">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Aircasting.AppBar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Aircasting.AppBar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Aircasting.AppBar</item>
        <item name="android:elevation">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/keyline_2</item>
        <item name="android:paddingStart">@dimen/app_bar_padding</item>
        <item name="android:paddingEnd">@dimen/app_bar_padding</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="ThemeOverlay.Aircasting.AppBar" parent="">
        <!-- background color -->
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <!-- text color -->
        <item name="colorOnPrimary">?attr/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.Aircasting.EmptyAppBar" parent="">
        <!-- background color -->
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <item name="homeAsUpIndicator">@drawable/chevron_left</item>
    </style>

    <!-- Tab Layout -->

    <style name="Widget.Aircasting.TabLayout" parent="">
        <item name="tabIndicator">@null</item>
        <item name="tabBackground">?android:attr/colorBackground</item>
        <item name="tabRippleColor">?android:attr/colorBackground</item>
        <item name="tabTextAppearance">@style/Widget.Aircasting.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/default_elevation</item>
        <item name="tabPaddingStart">@dimen/keyline_6</item>
        <item name="tabPaddingEnd">@dimen/keyline_6</item>
    </style>

    <style name="Widget.Aircasting.TabLayout.TextAppearance" parent="TextAppearance.Aircasting.Headline6">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Aircasting.BottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/aircasting_dark_blue</item>
    </style>

    <!-- Text inputs -->

    <style name="Widget.Aircasting.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/aircasting_grey_50</item>
        <item name="boxStrokeColor">@color/aircasting_grey_100</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:strokeColor">@color/aircasting_grey_100</item>
        <item name="hintTextAppearance">@style/TextAppearance.Aircasting.TextInput.Hint</item>
        <item name="shapeAppearance">@style/Widget.Aircasting.TextInputShapeAppearance</item>
    </style>

    <style name="Widget.Aircasting.TextInputEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.Aircasting.TextInput.Text</item>
        <item name="android:textColor">@color/aircasting_grey_700</item>
    </style>

    <style name="Widget.Aircasting.TextInputShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <!-- New session details -->

    <style name="Widget.Aircasting.NewSessionDetails.WifiIcon" parent="">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginStart">@dimen/keyline_4</item>
    </style>
</resources>
